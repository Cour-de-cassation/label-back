{
  "compilerOptions": {
    "lib": ["ES2022"],
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": { "@src/*": ["./src/*"]},
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "src/setupTests.ts"]
}
