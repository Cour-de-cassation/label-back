{
  "compilerOptions": {
    "lib": ["es2019"],
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": { "@src/*": ["./src/*"]},
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
